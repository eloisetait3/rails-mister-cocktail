<div class="container p-4">
  <h1 class="text-underline text-center">Mo'jito, Mo'fun</h1>

  <% @cocktails.each do |cocktail| %>
    <div class="container mb-3">
      <div class="banner" style="background-color: #DD6031; color:white">
        <div class="d-flex justify-content-center">
          <% if cocktail.photo.attached? %>
            <h1><%= cocktail.name %></h1>
            <%= cl_image_tag cocktail.photo.key, width: 100, height: 80, crop: :fill %>
            <%= link_to "Peek inside", cocktail_path(cocktail.id) %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="d-flex justify-content-center">
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary pad20" %>
  </div>
</div>
